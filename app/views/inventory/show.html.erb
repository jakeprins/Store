<table class="table">

  <tr>
    <td>
      <p></p>
    </td>
    <td>
      <h1><%= @inventory.name %></h1>
    </td>
  </tr>

  <tr>
    <td>
      Description:
    </td>
    <td>
      <%= @inventory.description %>
    </td>
