<link href='https://fonts.googleapis.com/css?family=Monsieur+La+Doulaise' rel='stylesheet' type='text/css'>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>

<section>
  <div class="all-prod">
    <div class="container">
        <div class ="row">
          <div class="col-md-2">&nbsp;</div>

          <div class="col-md-4">

            <%= form_tag '/products', :method => 'get', id: "search-form", class: "input", role:"search" do %>
                <p>
                  Search<br>
                  <%= search_field_tag :search, params[:search], placeholder: "example: piano", class: "input-field" %>
                </p>
            <% end %>

          </div>

          <div class="col-md-6">&nbsp;</div>
        </div>

        <% @products.each do |product| %>
        <div class ="row">
          <div class="col-md-2">&nbsp;</div>

          <div class="col-md-4">
            <%= image_tag(product.image, :class => "img-responsive img-prod-categ") %>
          </div>

            <div class="col-md-4">
              <p id="name"><strong><%= product.name %></strong></p>
              <p><strong>Price:</strong> â‚¬ <%= product.price %>,-</p>
              <p><strong>Amount left in stock:</strong> <%= product.quantity %></p>
              <p><strong>Description:</strong> <%= product.description %></p>

              <a href="/shopping_cart_items/<%= product.id %>">Add to cart</a>
            </div>

            <div class="col-md-2">&nbsp;</div>
          </div>
        <% end %>
    </div>
  </div>
</section>
