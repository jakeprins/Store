<link href='https://fonts.googleapis.com/css?family=Monsieur+La+Doulaise' rel='stylesheet' type='text/css'>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>


<div class="container-index">
  <div class="container">
    <p id="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% @product.each do |product| %>
      <div class ="row">
        <div class="col-sm-12 col-md-4">
          <div class="img-rounded">
            <p><%= image_tag(product.image, :class => "img-responsive") %></p>
          </div>
        </div>

        <div class="col-sm-12 col-md-4">
          <table class="table">
            <tr>
              <td><strong><%= product.name %></strong></td>
            </tr>
            <tr>
              <td><strong>Price</strong></td>
              <td>â‚¬ <%= product.price %>,-</td>
            </tr>
            <tr>
              <td><strong>Amount left in stock</strong></td>
              <td><%= product.quantity %></td>
            </tr>
            <tr>
              <td>
                <font color="#ff0000">
                  <a href="/shopping_cart_items/<%= product.id %>">Add to cart</a>
                </font>
              </td>
            </tr>
          </table>
        </div>

        <div class="col-sm-12 col-md-4">
          <p><%= product.description %></p>
        </div>
      </div>
    <% end %>

  </div>
</div>
