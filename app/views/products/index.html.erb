<link href='https://fonts.googleapis.com/css?family=Monsieur+La+Doulaise' rel='stylesheet' type='text/css'>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>

<section class="cart">
  <div class="container-index">
    <div class="container">
      <div class="trans">

        <div class ="row">
          <div class="col-xs-6 col-md-4">

            <%= form_tag '/products', :method => 'get', id: "search-form", class: "input", role:"search" do %>
                <p>
                  Search<br>
                  <%= search_field_tag :search, params[:search], placeholder: "example: piano", class: "input-field" %>
                </p>
            <% end %>

          </div>
        </div>
        <p>
        <% @products.each do |product| %>
          <div class ="row">
            <div class="col-xs-6 col-md-4">
              <div class="img-rounded">
                <p><%= image_tag(product.image, :class => "img-responsive") %></p>
              </div>
            </div>

            <div class="col-xs-6 col-md-4">
              <table class="tableIndex">
                <tr>
                  <td class=".tableIndex"><strong><%= link_to product.name, product_path(product.id) %></strong></td>
                </tr>
                <tr>
                  <td><strong>Price</strong></td>
                  <td>â‚¬ <%= product.price %>,-</td>
                </tr>
                <tr>
                  <td><strong>Amount left in stock </strong></td>
                  <td> <%= product.quantity %></td>
                </tr>
                <tr>
                  <td><strong>Description </strong></td>
                  <td><%= product.description %></td>
                </tr>
                <tr>
                  <td>
                    <font color="#ff0000">
                      <a href="/shopping_cart_items/<%= product.id %>">Add to cart</a>
                    </font>
                  </td>
                </tr>
              </table>
            </div>

            <div class="col-sm-12 col-md-4">
              <p></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
