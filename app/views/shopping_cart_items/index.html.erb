<h1>Your shopping cart</h1>

<% total = 0 %>
<% @shopping_cart.each do |id, quantity| %>
  <% @inventory = Inventory.find(id) %>
    <p><%= @inventory.name %></p>
    <p>Quantity: <%= quantity %></p>
    <p>Price: <%= @inventory.price %> EUR</p>
    <br>

    <% total += quantity * @inventory.price %>
<% end %>
<p>Total: <%= total %> EUR</p>

<br>
<%= link_to "Clear cart", shopping_cart_items_clear_path %>
