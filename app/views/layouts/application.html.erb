<!DOCTYPE html>
<html>
<head>
  <title>Store</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>Store</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">

      <ul class="no-bullets">

        <% if !user_signed_in? %>

          <li><%= link_to "Log in", new_user_session_path %></li>

        <% else %>

          <li><span><%= current_user.email %> | <%= current_user.name %></li></span>
          <li><%= link_to "Log out", destroy_user_session_path, :method => :delete %></li>

        <% end %>

      </ul>

    </div>
  </div>
</div>



<%= yield %>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
    </div>
  </div>
</div>

</body>
</html>
